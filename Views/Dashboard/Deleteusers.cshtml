@model Assignment_Form.Models.User
@{
    ViewBag.Title = "Deleteusers";
}
@section logout{
    <a href="@Url.Action("Login","Home")" class="btn btn-outline-light">Logout</a>
}
@section display{
    <a href="@Url.Action("displayusers","dashboard")" class="btn btn-outline-light">Display Users</a>
}

<div class="row justify-content-center">
    <div class="col-sm-6">

        @using (Html.BeginForm("Deleteusers", "Dashboard", FormMethod.Post, new { @class = "form p-3 border m-5 row justify-content-center" }))
        {
            <div class="form-outline mb-4">
                <b>@Html.LabelFor(m => m.Username, "Enter UserName To Delete")</b>
                @Html.HiddenFor(m=>m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control mt-2 mb-3",@disabled="disabled" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                @ViewBag.Warning
            </div>
            <div class="pt-1 mb-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }

    </div>
</div>




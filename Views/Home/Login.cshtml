@model Assignment_Form.Models.User
@{
    ViewBag.Title = "Login";
}
@section signup{
    <a href="@Url.Action("signup","Home")" class="btn btn-outline-light">Signup</a>
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">

                        <img src="~/Content/images/login_restaurant.jpg"
                             alt="login form" class="img-fluid h-100" style="border-radius: 1rem 0 0 1rem;" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center bg-black">
                        <div class="card-body p-4 p-lg-5 mb-0 text-black">
                            <span class="h1 fw-bold mb-0 text-orange">Orion Restaurant</span>

                            <div class="d-flex align-items-center mb-3 pb-1">
                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                            </div>

                            <h5 class="fw-normal mb-3 pb-3 bg-black text-white" style="letter-spacing: 1px;">Sign into your account</h5>

                            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form bg-black" }))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(m => m.Username, "UserName", new { @class = "text-white" })
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline mb-4">
                                    @Html.LabelFor(m => m.Password, "Password", new { @class = "text-white" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    @ViewBag.ErrorMessage
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                </div>
                                <a class="small text-muted" href="@Url.Action("updatepassword","dashboard")">Forgot password?</a>
                                <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                    Don't have an account? <a href="@Url.Action("Signup","Home")" style="color: #393f81;">Register here</a>
                                </p>
                                <a href="#!" class="small text-muted">Terms of use.</a>
                                <a href="#!" class="small text-muted">Privacy policy</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section validation{
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}